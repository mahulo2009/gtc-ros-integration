/* $Log */

package gtc.DSL.CK.GDEV;

public abstract class FilterWheel
{
  //----------------------------------------------------------------------
  //  Specific methods
  //----------------------------------------------------------------------

  /** void command */
  abstract void moveCommand(enum_Filter position);

  //----------------------------------------------------------------------
  //  Device Magnitudes
  //----------------------------------------------------------------------

  /**
  * FilterWheelFilter
  * @magnitude
  * @description FilterWheelFilter
  * @values UV, PURPLE, BLUE, GREEN, YELLOW, ORANGE, RED, IR
  * @sampling    1s
  * @storage     600.0s
  */
  protected enum_Filter filterWheelFilter;

  /**
  * FilterWheelMoving
  * @magnitude
  * @description FilterWheelMoving
  * @maximum     true
  * @minimum     false
  * @units       None
  * @sampling    0.2s
  * @storage     60.0s
  */
  protected boolean filterWheelMoving;

  //----------------------------------------------------------------------
  //  Device Alarms
  //----------------------------------------------------------------------

  /**
  * Device Fault Alarm: raised when a Device enters the FAULT state
  * @alarm
  * @description DeviceFault
  * @severity    LEVEL5
  * @acknowledge  Yes
  * @actions     "Check this Device"
  */
  private Alarm DeviceFault;


  //----------------------------------------------------------------------
  //  Instances of class FilterWheel
  //----------------------------------------------------------------------

  /**
  * Example device instance 1
  * @instance 
  * @name      Osiris/FilterWheel_1
  * @mode      INTEGRATED
  * @priority  100
  * @threads   4
  */
  private Device FilterWheel_1;

  //----------------------------------------------------------------------
  //  Application
  //----------------------------------------------------------------------

  /** 
  * Test application is used to create the devices
  * @application
  * @name TestApplication
  */
  private Application Test_application;    

  //----------------------------------------------------------------------
  //  LCU
  //----------------------------------------------------------------------

  /** 
  * The LCU starts the applications
  * @lcu
  * @name TestLCU
  */
  private LCU Test_lcu;
}

